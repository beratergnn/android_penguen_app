<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/arkaplan"
    tools:context=".CalisKartActivity"

    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/caliskartustlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_bottom"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <com.lorentzos.flingswipe.SwipeFlingAdapterView
            android:id="@+id/caliskartSwipfling"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/arkaplan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:padding="15dp"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/beg2"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Zeka Bir Yere Kadar Seni Götürür.\nGeri Kalan İçin Mutlaka Çalışmak Zorundasın"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/caliskartaltlayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/yellow"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <Button
                android:id="@+id/btncaliskartSol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:padding="20dp"
                android:textColor="@color/arkaplan"
                android:backgroundTint="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btncaliskartSag"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btncaliskartSag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:padding="20dp"
                android:textColor="@color/arkaplan"
                android:backgroundTint="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/btncaliskartSol"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>